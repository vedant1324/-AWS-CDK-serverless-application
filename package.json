{
  "name": "aws-cdk",
  "version": "0.1.0",
  "bin": {
    "aws-cdk": "bin/aws-cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test-local": "npm run build && node scripts/test-lambda-locally.js",
    "test-with-localstack": "npm run build && cross-env USE_LOCALSTACK=true AWS_ENDPOINT_URL=http://localhost:4566 node scripts/test-lambda-locally.js",
    "test-direct-localstack": "npm run build && node scripts/test-direct-localstack.js",
    "start-api": "npm run build && node scripts/mock-api-server.js",
    "start-localstack": "docker-compose up -d",
    "stop-localstack": "docker-compose down",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff --all",
    "synth": "cdk synth --all",
    "monitor": "echo 'Opening monitoring dashboard...' && start https://us-east-1.console.aws.amazon.com/cloudwatch/home?region=us-east-1#dashboards:name=application-dashboard"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1022.0",
    "aws-cdk-lib": "^2.208.0",
    "aws-sdk": "^2.1692.0",
    "cross-env": "^10.0.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.857.0",
    "@aws-sdk/client-xray": "^3.857.0",
    "constructs": "^10.0.0",
    "dotenv": "^17.2.1",
    "localstack": "^1.0.0",
    "node-fetch": "^3.3.2",
    "open": "^8.4.0",
    "winston": "^3.17.0"
  }
}
